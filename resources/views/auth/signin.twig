{% extends 'templates/app.twig' %}

{% block styles %}
    <link rel="stylesheet" href="{{ base_url() }}/css/auth.css">
{% endblock %}

{% block content %}
    <div class="auth-container">
        <div class="auth-card">
            <!-- Header -->
            <div class="auth-header">
                <div class="auth-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                        <polyline points="10 17 15 12 10 7"></polyline>
                        <line x1="15" y1="12" x2="3" y2="12"></line>
                    </svg>
                </div>
                <h1 class="auth-title">Sign In</h1>
                <p class="auth-subtitle">Masuk ke akun Anda untuk melanjutkan</p>
            </div>

            <!-- Form -->
            <form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off" class="auth-form">
                <!-- Email Field -->
                <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                    <div class="input-group">
                        <div class="input-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                        </div>
                        <div class="input-wrapper">
                            <label for="email" class="input-label">Email Address</label>
                            <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-input" value="{{ old.email ?? '' }}">
                        </div>
                    </div>
                    {% if errors.email %}
                        <div class="error-message">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="12" y1="8" x2="12" y2="12"></line>
                                <line x1="12" y1="16" x2="12.01" y2="16"></line>
                            </svg>
                            {{ errors.email }}
                        </div>
                    {% endif %}
                </div>

                <!-- Password Field -->
                <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                    <div class="input-group">
                        <div class="input-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                        </div>
                        <div class="input-wrapper">
                            <label for="password" class="input-label">Password</label>
                            <input type="password" name="password" id="password" placeholder="••••••••" class="form-input">
                        </div>
                        <button type="button" class="toggle-password" id="togglePassword">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                        </button>
                    </div>
                    {% if errors.password %}
                        <div class="error-message">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="12" y1="8" x2="12" y2="12"></line>
                                <line x1="12" y1="16" x2="12.01" y2="16"></line>
                            </svg>
                            {{ errors.password }}
                        </div>
                    {% endif %}
                </div>

                <!-- Remember Me (Optional - bisa ditambahkan nanti) -->
                <!-- <div class="form-options">
                    <label class="checkbox-label">
                        <input type="checkbox" name="remember" class="checkbox-input">
                        <span class="checkbox-text">Remember me</span>
                    </label>
                    <a href="#" class="forgot-link">Forgot password?</a>
                </div> -->

                <!-- Submit Button -->
                <button type="submit" class="submit-btn">
                    <span class="btn-text">Sign In</span>
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14"></path>
                        <path d="M12 5l7 7-7 7"></path>
                    </svg>
                </button>
            </form>

            {# <!-- Footer Links -->
            <div class="auth-footer">
                <p class="footer-text">Don't have an account? 
                    <a href="{{ path_for('auth.') }}" class="footer-link">Sign Up</a>
                </p>
            </div> #}
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="{{ base_url() }}/js/auth.js"></script>
{% endblock %}