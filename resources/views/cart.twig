{% extends 'templates/app.twig' %}

{% block content %}
<div class="container py-5">
    <h1>Keranjang Belanja</h1>

    {% if session.cart is defined and session.cart|length > 0 %}
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Produk</th>
                    <th>Harga</th>
                    <th>Jumlah</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% set grandTotal = 0 %}
                {% for item in session.cart %}
                    {% set grandTotal = grandTotal + item.total_price %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>Rp {{ item.price|number_format(0, ',', '.') }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>Rp {{ item.total_price|number_format(0, ',', '.') }}</td>
                    </tr>
                {% endfor %}
                <tr>
                    <th colspan="3">Grand Total</th>
                    <th>Rp {{ grandTotal|number_format(0, ',', '.') }}</th>
                </tr>
            </tbody>
        </table>
        <a href="/checkout" class="btn btn-primary">Checkout</a>
    {% else %}
        <p>Keranjang kosong.</p>
    {% endif %}
</div>
{% endblock %}
